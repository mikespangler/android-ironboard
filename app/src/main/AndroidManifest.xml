<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flatironschool.ironboard" >
<uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.flatironschool.ironboard.activities.LandingActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.NoTitle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.flatironschool.ironboard.activities.HomeActivity"
            android:label="@string/title_activity_home_screen" >
        </activity>
        <activity
            android:name="com.flatironschool.ironboard.activities.ScheduleActivity"
            android:label="@string/title_activity_schedule" >
        </activity>
        <activity
            android:name="activities.ProgressActivity"
            android:label="@string/title_activity_progress" >
        </activity>
        <activity
            android:name="com.flatironschool.ironboard.activities.AnnouncementsActivity"
            android:label="@string/title_activity_announcements" >
        </activity>
        <activity
            android:name="com.flatironschool.ironboard.activities.HandraiseActivity"
            android:label="@string/title_activity_handraise" >
        </activity>
    </application>
</manifest>
