<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="70dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.flatironschool.ironboard.activities.HomeActivity"
    android:id="@+id/home_screen">

    <IconButton
        android:id="@+id/schedule_button"
        android:layout_height="@dimen/home_activity_button_height"
        android:layout_width="@dimen/home_activity_button_width"
        android:layout_centerHorizontal="true"
        android:text="@string/schedules"
        />

    <IconButton
        android:id="@+id/progress_button"
        android:layout_height="@dimen/home_activity_button_height"
        android:layout_width="@dimen/home_activity_button_width"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/progress"
        />

    <IconButton
        android:id="@+id/announcements_button"
        android:layout_height="@dimen/home_activity_button_height"
        android:layout_width="@dimen/home_activity_button_width"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="@string/announcements"
        />

    <IconButton
        android:id="@+id/handraise_button"
        android:layout_height="@dimen/home_activity_button_height"
        android:layout_width="@dimen/home_activity_button_width"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:text="@string/handraise"
        />

</RelativeLayout>
